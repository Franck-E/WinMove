<Window x:Class="WinMove.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinMove"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterOwner"
        Closed="Window_Closed">
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" >
                <GradientStop Color="#F0EB36" Offset="0.0" />
                <GradientStop Color="#73C269" Offset="0.5" />
                <GradientStop Color="#1E91A5" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        
        <Button HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Content="Click me to bring secondary window to this screen for 5 seconds"
                Height="30" Width="400"
                Click="Button_Click">
            
        </Button>
    </Grid>
</Window>
